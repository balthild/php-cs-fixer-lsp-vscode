{
  "name": "php-cs-fixer-lsp",
  "displayName": "php-cs-fixer-lsp",
  "description": "Make PHP-CS-Fixer faster by keep it running in background",
  "version": "0.2.1",
  "license": "MPL-2.0",
  "publisher": "balthild",
  "repository": {
    "type": "git",
    "url": "https://github.com/balthild/php-cs-fixer-lsp-vscode"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "contributes": {
    "commands": [
      {
        "command": "php-cs-fixer-lsp.downloadServer",
        "title": "php-cs-fixer-lsp: Download Server"
      },
      {
        "command": "php-cs-fixer-lsp.restartServer",
        "title": "php-cs-fixer-lsp: Restart Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PHP CS Fixer Language Server",
      "properties": {
        "php-cs-fixer-lsp.logLevel": {
          "type": "string",
          "default": "info",
          "description": "Log level for the language server.",
          "enum": [
            "debug",
            "info",
            "warning",
            "error"
          ]
        },
        "php-cs-fixer-lsp.serverExec": {
          "type": "string",
          "default": "",
          "description": "Path to the language server executable. Leave empty to auto-download the latest release."
        },
        "php-cs-fixer-lsp.serverArgs": {
          "type": "array",
          "default": [],
          "description": "Additional arguments to pass to the language server",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "rollup -c",
    "watch": "rollup -c -w",
    "vscode:prepublish": "npm run compile",
    "release": "release-it",
    "package": "vsce package",
    "pretest": "eslint src && tsc -p ./",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.61.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "release-it": "^19.2.4",
    "rollup": "^4.57.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
